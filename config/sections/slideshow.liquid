{%- capture sliderID -%}slider-{{ section.id }}{%- endcapture -%}

<div id="{{sliderID}}" class="slideshow{% if section.settings.mobile_hide_slideshow %} hide-mobile{% endif %}" data-section-id="{{ section.id }}" data-section-type="slideshow" data-speed="{{section.settings.slideshow_speed}}" data-autoplay="{{section.settings.auto_scroll}}" data-transition="{{section.settings.slide_trans}}" data-arrow-left="{% include 'icon-arrowleft'%}" data-arrow-right="{% include 'icon-arrowright'%}">
  <div class="slides owl-carousel">
    {% for block in section.blocks %}
      {% if block.settings.image == blank %}
        {% capture imagesrc %}<div class="placeholder-background">{{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}</div>{% endcapture %}
      {% else %}
        {% capture imagesrc %}<img src="{{ block.settings.image | img_url: '1000x' }}" alt="{{ block.settings.image.alt | escape }}" />{% endcapture %}
      {% endif %}
      <div class="slide{% if forloop.first %} first-slide{% endif %} sl-{{forloop.index}} slide--{{ block.id }}" data-index="{{forloop.index0}}" {{ block.shopify_attributes }}>
        {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}">
        {% endif %}
        {{imagesrc}}
        {% unless block.settings.caption == blank %}
          <span class="caption">{{ block.settings.caption | escape }}</span>
        {% endunless %} 
        {% if block.settings.link != blank %}
          </a>
        {% endif %}  
      </div>
    {% endfor %}
  </div>
</div>

{% if section.blocks.size == 0 %}
  <div class="placeholder-noblocks">
    {{ 'homepage.onboarding.no_content' | t }}
  </div>
{% endif %}

