<div
    id="PageHeaderSection"
    data-section-id="{{ section.id }}"
    data-section-type="page-header"
   data-parallax="true">

    <div class="page-hero">
        
          <div class="parallax-container">
            <div
              class="parallax-image collection-hero__image lazyload"
              data-bgset="{% include 'bgset', image: section.settings.banner_image %}"
              data-sizes="auto">
            </div>
          </div>
      	{% if section.settings.video_url != blank %}
      		<div class="video-player" data-plyr-provider="{{section.settings.video_url.type}}" data-plyr-embed-id="{{section.settings.video_url.id}}"></div>
      	{% endif %}
       

        <div class="blog-hero__content">
          <div class="page-width">
            <header class="section-header section-header--hero">
              <div class="section-header__noshadow">
                <h1 class="section-header__title">
                    {{ section.settings.banner_heading }}
                </h1>
              </div>
            </header>
          </div>
        </div>
    </div>
</div>

<section class="about-us">
  <div class="container">
    <div class="text-wrapper" data-aos="fade-in">
      {{ section.settings.intro_text }}
    </div>
    <center><pa></pa></center>
    {%- if section.settings.intro_text2 != blank -%}
    <div class="text-wrapper2 " data-aos="fade-in">
      {{ section.settings.intro_text2 }}
    </div>
    {%- endif -%}
  </div>
</section>
<div class="product-wrapper our-roots">
    {%- comment -%}
    <section class="product-wrapper-header">
      <div class="container">
        <h2 class="product-wrapper-heading">{{ section.settings.text_image_heading }}</h2>
      </div>
    </section>
    {%- endcomment -%}

    
    {% for block in section.blocks %}

        {%- if block.type == 'content-two' -%}
          <section class="go-fresh two-column" style="background-color:{{block.settings.background}};">
            <div class="image-top">
              <img src="{{ block.settings.image_top | img_url: '100x100' }}" />
            </div>
            <div class="">
                <div class="display-table" data-aos="fade-in">
                    <div class="display-cell">
                        <div class="img-wrap" style="margin:initial">
                            <div class="img" style="background-image:url( '{{ block.settings.image | img_url: '720x720' }}' )"></div>
                        </div>
                    </div>
                    <div class="display-cell v2" data-aos="fade-right">
                        <div class="text-wrap v2 text-right">
                            <div class="inner-wrapper" style="padding-right: 30px">
                                <h2>{{ block.settings.heading }}</h2>
                                {{ block.settings.copy }}
                                <a class="Button btn--primary" href="{{ block.settings.url }}"><span>{{ block.settings.text }}</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </section>
        {%- endif -%}
        {%- if block.type == 'content-one' -%}
          <section class="go-fresh one-column" style="background-color:{{block.settings.background}};">
            <div class="image-top">
              <img src="{{ block.settings.image_top | img_url: '100x100' }}" />
            </div>
            <div class="container">
                <div class="display-table" data-aos="fade-in">                    
                    <div class="display-cell" data-aos="fade-in">
                        <div class="text-wrap one-column">
                            <div class="inner-wrapper">
                                <h2>{{ block.settings.heading }}</h2>
                                {{ block.settings.copy }}
                                {%- if block.settings.text -%}
                                <div class="cta-wrapper"><a class="Button btn--primary" href="{{ block.settings.url }}"><span>{{ block.settings.text }}</span></a></div>
                                {%- endif -%}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </section>
        {%- endif -%}

    {% endfor %}
    
 
    {%- comment -%}
       <section class="go-fresh">
        <div class="container">
            <div class="display-table">
                <div class="display-cell">
                    <div class="text-wrap">
                        <div class="inner-wrapper">
                            <h2>{{ section.settings.heading_left_first }}</h2>
                            {{ section.settings.content_left_first }}
                            <a class="Button" href="{{ section.settings.link_left_first }}"><span>{{ section.settings.button_caption_left_first }}</span></a>
                        </div>
                    </div>
                </div>
                <div class="display-cell">
                    <div class="img-wrap">
                        <div class="img" style="background-image:url( '{{ section.settings.image_first | img_url: '720x720' }}' )"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="go-fresh">
        <div class="container">
            <div class="display-table v2">
                <div class="display-cell v2">
                    <div class="img-wrap v2">
                        <div class="img" style="background-image:url( '{{ section.settings.image_second | img_url: '720x720' }}' )"></div>
                    </div>
                </div>
                <div class="display-cell v2">
                    <div class="text-wrap v2">
                        <div class="inner-wrapper">
                            <h2>{{ section.settings.heading_left_second }}</h2>
                            {{ section.settings.content_left_second }}
                            <a class="Button" href="{{ section.settings.link_left_second }}"><span>{{ section.settings.button_caption_left_second }}</span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="go-fresh">
        <div class="container">
            <div class="display-table">
                <div class="display-cell">
                    <div class="text-wrap">
                        <div class="inner-wrapper">
                            <h2>{{ section.settings.heading_left_third }}</h2>
                            {{ section.settings.content_left_third }}
                            <a class="Button" href="{{ section.settings.link_left_third }}"><span>{{ section.settings.button_caption_left_third }}</span></a>
                        </div>
                    </div>
                </div>
                <div class="display-cell">
                    <div class="img-wrap">
                        <div class="img" style="background-image:url( '{{ section.settings.image_third | img_url: '720x720' }}' )"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {%- endcomment -%}

 
</div>
