<style>
  #fabric-benefit {
    background-image: url({{section.settings.background-url}});
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }
  #fabric-benefit h1 {
    color: white;
  }
  #fabric-benefit img {
    max-height: 120px;
    object-position: 0px 25px;
  }
  #fabric-benefit .fab-cont {
    padding: 150px 0px;
  }
  #fabric-benefit .iconContainer {
    height: 150px;
    display: flex;
    flex-direction: column;
    margin-bottom: 25px;   
  } 
 .iconBox {
    flex-grow:1;
  }
  .iconText {
    color: white;
    font-weight: bold;
    font-size: 16px;
    letter-spacing: 1.5px;
  }
  
</style>

<section id="fabric-benefit">
   <div class="fab-cont">
    <div class="container-fluid">
      <div style="text-align: center" class="row">
        {% assign i = 0 %}
        {% for block in section.blocks %}  
        
        {% assign i = i | plus: 250 %}
          <div data-aos="fade-in" data-aos-offset="150" data-aos-delay={{ i }} data-aos-duration="1000" class="col-lg-2 col-md-4 col-sm-6 col-xs-6">
            <div class="iconContainer">
              <div class="iconBox">
                {{ block.settings.icon | img_url: '75x75', scale: 2 | img_tag: block.settings.image.alt, image_class }}              
             </div>
             <div class="iconText">
               {{block.settings.label}}
             </div>
            </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>




{% schema %}
  {
    "name": "Febric Benefits",
    "settings": [{
     	  "type": "text",
          "id": "background-url",
