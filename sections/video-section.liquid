<style>
  .index-slider-styling{
    padding-bottom: 35px !important; 
  }
  .video-autoplay-wrapper {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    background-color: var(--bg);
    height: 400px;
  }
  .video-autoplay-wrapper video {
    width: 100%; 
    height: 100%;
    object-fit: cover;
 
  }
  .video-autoplay-wrapper-container {
    height: 400px;
  }
  @media only screen and (max-width: 600px) {
    .index-slider-styling{
      margin: 0 !important; 
      padding-top: 0 !important; 
    }
  }
</style>  
<div id="products-{{ section.id }}" class="page-width{% if section.settings.sidebar == 'left' or section.settings.sidebar == 'right' %} has-sidebar{% endif %}" data-section-id="{{ section.id }}" data-section-type="products"{% if section.settings.background != blank %} style="background-color:{{ section.settings.background }};"{% endif %}>
  <div class="video-autoplay-wrapper-container column-container small-12 large-12 float-{{ section.settings.sidebar }}" style="position:relative">
    <div class="video-autoplay-wrapper">
      <h1 style="text-align: center;top: 200px;">{{section.settings.heading}}</h1>
        <video src={{section.settings.video_url}} style="object-position: center center;" playsinline="" autoplay="" loop="" muted="">
          <source src={{section.settings.video_url}} type="video/mp4">
        </video>
      </div>
  </div>
</div>

{% schema %}
  {
    "name": "Video Section",
    "class": "index-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
        "type": "text",
        "id": "sidebar_height",
        "label": "Height (px)"
      },
      {
        "type": "text",
        "id": "video_url",
        "label": "Video URL"
      }
    ],
    "presets": [
      {
        "name": "Video Section",
        "category": "Collection"
      }
    ]
  }
{% endschema %}