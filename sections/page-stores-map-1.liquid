{% include 'section-map' %}

{% schema %}
  {
    "name": "Map 1",
    "class": "index-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "image_left",
        "label": "Image on left",
        "default": false
      },
      {
        "type": "range",
        "id": "margin",
        "min": 0,
        "max": 60,
        "step": 5,
        "label": "Top and bottom margin",
        "default": 0
      },
      {
        "type": "select",
        "id": "height",
        "label": "Section height",
        "default": "use_screen_one_third",
        "options": [
          { "value": "use_screen_full", "label": "Full screen height"},
          { "value": "use_screen_two_thirds", "label": "Tall"},
          { "value": "use_screen_one_half", "label": "Medium"},
          { "value": "use_screen_one_third", "label": "Short"},
          { "value": "use_screen_one_fifth", "label": "Tiny"}
        ]
      },
      {
        "type": "header",
        "content": "Address & Directions"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Our store"
      },
      {
        "type": "richtext",
        "id": "address",
        "label": "Address and hours",
        "default": "<p>123 Fake St.<br>Whistler, Canada</p><p>Mon - Fri, 10am - 9pm<br>Weekends, 11am - 4pm</p>"
      },
      {
        "type": "text",
        "id": "button",
        "label": "Map link label",
        "default": "Directions"
      },
      {
        "type": "select",
        "id": "button_style",
        "label": "Button style",
        "default": "btn btn--clear btn--square uppercase",
        "options": [
          { "value": "btn btn--splash uppercase", "label": "Round"},
          { "value": "btn btn--splash btn--square uppercase", "label": "Square"},
          { "value": "btn btn--clear uppercase", "label": "Transparent round"},
          { "value": "btn btn--clear btn--square uppercase", "label": "Transparent square"},
          { "value": "btn btn--outline btn--square uppercase", "label": "Outlined square"}
        ]
      },
      {
        "type": "select",
        "id": "style",
        "label": "Map style",
        "default": "light",
        "options": [
          { "value": "default", "label": "Default" },
          { "value": "light", "label": "Desaturated"},
          { "value": "light_blank", "label": "Desaturated without labels"},
          { "value": "white_label", "label": "White"},
          { "value": "white_blank", "label": "White without labels"},
          { "value": "dark_label", "label": "Black"},
          { "value": "dark_blank", "label": "Black without labels"}
        ]
      },
      {
        "type": "range",
        "id": "zoom",
        "min": 1,
        "max": 20,
        "step": 1,
        "label": "Zoom",
        "info":"Low numbers are less zoomed",
        "default": 11
      },
      {
        "type": "select",
        "id": "homepage_bg_color",
        "label": "Background color",
        "default": "homepage--light",
        "options": [
          { "value": "homepage--white", "label": "White"},
          { "value": "homepage--light", "label": "Light"},
          { "value": "homepage--splash", "label": "Accent"},
          { "value": "homepage--dark", "label": "Dark"}
        ]
      },
      {
        "type": "header",
        "content": "Map"
      },
      {
        "id": "api_key",
        "type": "text",
        "label": "Google Maps API key",
        "info": "You’ll need to [register a Google Maps API Key](https://help.shopify.com/manual/using-themes/troubleshooting/map-section-api-key) to display the map"
      },
      {
        "id": "map_address",
        "type": "text",
        "label": "Map address",
        "info": "Google Maps will find the exact location",
        "default": "4300 Main St, Whistler"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "Displayed if the map isn’t loaded"
      }
    ]
  }
{% endschema %}
