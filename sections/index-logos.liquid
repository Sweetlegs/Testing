<div class="homepage-logos {{ section.settings.homepage_logos_bg_color }}{% if section.settings.title != blank %} homepage-logos--tall{% endif %}">
  <div class="wrapper">

    {% if section.settings.title != blank %}
      <h4 class="home__subtitle">{{ section.settings.title | escape }}</h4>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="logo-bar">
        {% for block in section.blocks %}
          <div class="logo-bar__item {% if forloop.index == 1%} active {% endif %}" {{ block.shopify_attributes }}>
            <a href="javascript:void(0)" data-target=".message-{{forloop.index}}" class="logo-bar__link">
            {% if block.settings.image != blank %}
              {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
              <div class="lazy-image logo-bar__image" style="padding-top:{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100}}%; background-image:  url('{{ block.settings.image | img_url: '1x1' }}');">
                <img class="lazyload fade-in"
                  alt="{{ block.settings.image.alt }}"
                  data-src="{{ img_url }}"
                  data-widths="[110, 160, 220, 320, 480]"
                  data-aspectratio="{{  block.settings.image.aspect_ratio }}"
                  data-parent-fit="cover"
                  data-sizes="auto"/>
              </div>
              <noscript>
                <img src="{{ block.settings.image | img_url: '160x' }}" alt="{{ block.settings.image.alt | default: block.settings.title }}"/>
              </noscript>
            {% else %}
              {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            </a>
          </div>
        {% endfor %}
      </div>
    {% endif %}
    <div class="message-bar" style="min-height:100px">
      {% for block in section.blocks %}
      <div class="message rte rte--homepage text-center page-margin message-{{forloop.index}} {% if forloop.index > 1%} hidden {% endif %}">
        {{block.settings.message}}
      </div>
      {% endfor %}
    </div>

    {% if section.blocks.size == 0 %}
      <div class="text-center">{{ 'home_page.onboarding.no_content' | t }}</div>
    {% endif %}

  </div>
</div>

{% schema %}
  {
    "name": "Logo list",
    "class": "index-section",
    "max_blocks": 20,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Logo list"
      },
      {
        "type": "select",
        "id": "homepage_logos_bg_color",
        "label": "Background color",
        "default": "homepage--light",
        "options": [
          { "value": "homepage--white", "label": "White"},
          { "value": "homepage--light", "label": "Light"},
          { "value": "homepage--splash", "label": "Accent"},
          { "value": "homepage--dark", "label": "Dark"}
        ]
      }
    ],
    "blocks": [
      {
        "type": "logo_image",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "640 x 640px .png recommended"
          },
          {
            "type": "textarea",
            "id": "message",
            "label": "Message"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo list",
        "category": "Image",
        "blocks": [
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          }
        ]
      }
    ]
  }
{% endschema %}
