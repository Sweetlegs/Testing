<div
    id="PageHeaderSection"
    data-section-id="{{ section.id }}"
    data-section-type="page-header"
   data-parallax="true">

    <div class="page-hero">
        
          <div class="parallax-container">
            <div
              class="parallax-image collection-hero__image lazyload"
              data-bgset="{% include 'bgset', image: section.settings.banner_image %}"
              data-sizes="auto">
            </div>
          </div>
      	{% if section.settings.video_url != blank %}
      		<div class="video-player" data-plyr-provider="{{section.settings.video_url.type}}" data-plyr-embed-id="{{section.settings.video_url.id}}"></div>
      	{% endif %}
       

        <div class="blog-hero__content">
          <div class="page-width">
            <header class="section-header section-header--hero">
              <div class="section-header__noshadow">
                <h1 class="section-header__title">
                    {{ section.settings.banner_heading }}
                </h1>
              </div> 
            </header>
          </div>
        </div>
    </div>
</div>

{%- if request.page_type != 'search' -%}

<section class="introduction-section">
  <div class="container">
    <div class="introduction-content ">
        <h3>{{ section.settings.intro_title }}</h3>
        {{ section.settings.intro_text }}
    </div>
 
  </div>
  
</section>




<link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
<script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript"></script>

<div class="product-wrapper">
  	<section class="product-wrapper-header">
      <div class="container">
        <h2 class="product-wrapper-heading">How it Works</h2>
      </div>
    </section>
    <section class="trachBatch">
        <div class="container">
            <div class="trackBatch-wrap"  data-aos="fade-left">
              <div class="batchForm-Info">
                <h2>{{ section.settings.main_title }}</h2>
                <div class="trackBatch-content">

                  {{ section.settings.main_text }}
                </div>
              </div>

              <a href="#" onclick="Calendly.initPopupWidget({url: 'https://calendly.com/trishagrimes/ask-anything'});return false;" target="_blank" class="site-nav__link js-no-transition btn btn-secondary gray medium-down--hide">
                BOOK YOUR CONSULTATION
            </a>

            </div>

            <div class="Trackbatch__image" style="background-image:url( '{{ section.settings.main_image | img_url: '720x720' }}' )">
            </div>
        </div>
    </section>
    
</div>

  
{%- endif -%}

<style>
  .trackBatch-wrap .batchForm-Info h2 {
    font-family: futura-pt, sans-serif;
  }
</style>

{% schema %}
  {
    "name": "Content",
    "settings": [
      {
        "type": "text",
        "id": "banner_heading",
        "label": "Banner Heading"
      },
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Banner Image",
		"info": "Recommended image size: 1920 x 420 pixels"
      },
	  {
        "id": "video_url",
        "type": "video_url",
        "label": "Video URL",
        "accept": ["youtube", "vimeo"]
      },
      {
        "type": "text",
        "id": "intro_title",
        "label": "Introduction Title"
      },
      {
        "type": "richtext",
        "id": "intro_text",
        "label": "Introduction Content"
      },
      {
        "type": "header",
        "content": "Main Informations"
      },
      {
        "type": "text",
        "id": "main_title",
        "label": "Main Title"
      },
      {
        "type": "richtext",
        "id": "main_text",
        "label": "Main Content"
      },
      {
        "type": "image_picker",
        "id": "main_image",
        "label": "Main Image",
		"info": "Recommended image size: 500 x 500 pixels"
      },
      {
        "type": "header",
        "content": "Bottom Additional Informations"
      },
      {
        "type": "text",
        "id": "bottom_heading",
        "label": "Bottom Heading"
      },
      {
        "type": "richtext",
        "id": "bottom_text",
        "label": "Bottom Content"
      }
    ]
  }
{% endschema %}

