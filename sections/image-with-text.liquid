<style>

</style>

<section class="section container">
  <div class="image-with-text-section" style='grid-template-areas: 
    "{{ section.settings.image_position }}"'>
    <div class="image-wrapper">
      <img src="{{ section.settings.image | img_url: '950x950'  }}" alt="{{ section.settings.image.alt }}">     
    </div>
    <div class="text-wrapper">
      <h3 class="heading">{{ section.settings.title }}</h3>
      <p>{{ section.settings.text }}</p>
      {% if section.settings.button_name.size  > 0 %}
      <a href="{{ section.settings.button_url  }}" class="btn btn-primary btn--anchor">{{ section.settings.button_name  }}</a>
        {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image with Text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Select the image you want to display."
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        {
          "value": "column2 column1",
          "label": "Left"
        },
        {
          "value": "column1 column2",
          "label": "Right"
        }
      ]
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },

    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_name",
      "label": "Button Name"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Image with text"
    }
  ]
}
{% endschema %}
