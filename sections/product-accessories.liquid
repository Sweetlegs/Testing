{% assign published_at = product.published_at | date: '%s' | convert: "number" %}
{% assign current_time = 'now' | date: '%s' | convert: "number" %}
{% assign time_lapsed = current_time | minus: published_at %}
{% assign days_lapsed = time_lapsed | divided_by: 3600 | divided_by: 24 %}


{% if customer.tags contains "distributor" or customer.tags contains "Distributor" %}
	{% include 'alertMessageLineItem' %}
{% endif %}


