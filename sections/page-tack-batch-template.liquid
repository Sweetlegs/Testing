<div
    id="PageHeaderSection"
    data-section-id="{{ section.id }}"
    data-section-type="page-header"
   data-parallax="true">

    <div class="page-hero">
        
          <div class="parallax-container">
            <div
              class="parallax-image collection-hero__image lazyload"
              data-bgset="{% include 'bgset', image: section.settings.banner_image %}"
              data-sizes="auto">
            </div>
          </div>
      	{% if section.settings.video_url != blank %}
      		<div class="video-player" data-plyr-provider="{{section.settings.video_url.type}}" data-plyr-embed-id="{{section.settings.video_url.id}}"></div>
      	{% endif %}
       

        <div class="blog-hero__content">
          <div class="page-width">
            <header class="section-header section-header--hero">
              <div class="section-header__noshadow">
                <h1 class="section-header__title">
                    {{ section.settings.banner_heading }}
                </h1>
              </div>
            </header>
          </div>
        </div>
    </div>
</div>

{%- if request.page_type != 'search' -%}

<section class="about-us">
  <div class="container aos-init aos-animate" data-aos="fade-in">
    <div class="text-wrapper ">
      <p>{{ section.settings.intro_title }}</p>
    </div>
    <div class="text-center">
      <pa></pa>
    </div>
    <div class="text-wrapper2 aos-init aos-animate" data-aos="fade-in">
    {{ section.settings.intro_text }}
    </div>
  </div>
</section>
<section class="introduction-section">
  <div class="container">
    <div class="introduction-content ">
        <div class="batch-track">
            <h3>BE A PART OF THE RESCUE</h3>
            <div class="batch-track__wrap">
                <div class="batch-track__image"><img src="{{ section.settings.icon-1 | img_url: 'master' }}" alt /></div>
                <div class="batch-track__steps"></div>
                <div class="batch-track__image"><img src="{{ section.settings.icon-2 | img_url: 'master' }}" alt /></div>
                <div class="batch-track__steps"></div>
                <div class="batch-track__image"><img src="{{ section.settings.icon-3 | img_url: 'master' }}" alt /></div>
                <div class="batch-track__steps"></div>
                <div class="batch-track__image"><img src="{{ section.settings.icon-4 | img_url: 'master' }}" alt /></div>
            </div>
        </div>
    </div>
 
  </div>
  
</section>




<div class="product-wrapper">
  	<section class="product-wrapper-header">
      <div class="container">
        <h2 class="product-wrapper-heading">Track your batch</h2>
      </div>
    </section>
    <section class="go-fresh">
      <div class="container">
        <div class="display-table">
          <div class="display-cell" data-aos="fade-left">
            <div class="text-wrap trackBatch-content">
              <div class="inner-wrapper">
                <h2>{{ section.settings.main_title }}</h2>  
                {{ section.settings.main_text }}
                {% include 'batch-search-form' %}
              </div>
            </div>
          </div>
          <div class="display-cell" data-aos="fade-in">
            <div class="img-wrap v3" style="background-position:top; background-image:url( '{{ section.settings.main_image | img_url: '720x720' }}' )"></div>
          </div>
        </div>
      </div>
    </section>     
</div>

<section class="about-us" style="padding-bottom:0">
  <div class="container aos-init aos-animate" data-aos="fade-in">
    <div class="text-wrapper ">
      <p>{{ section.settings.bottom_heading }}</p>
    </div>
    <div class="text-center">
      <pa></pa>
    </div>
    <div class="text-wrapper2 aos-init aos-animate" data-aos="fade-in">
    <p>{{ section.settings.bottom_text }}</p>
    </div>
  </div>
</section>
  
{%- endif -%}

