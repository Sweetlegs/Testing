<style>
  .wrapper{
    width: 100%;
    height: 634.4px;
    position: relative;
    overflow: hidden;
  }

  .wrapper .wrapper__video{
    object-fit: cover;
    width: 100%;
    height: 100%;
  }
  
  
/* Speaker */
  .sound {
    width: 40px;
    height: 80px;
    position: absolute;
    bottom: 0px;
    right: 25px;
    cursor: pointer;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}
 .sound--icon {
	color: #FFFF;
    line-height: 100%;
    font-size: 35px;
    display: block;
}
 .sound--wave {
	 position: absolute;
	 border: 2px solid transparent;
	 border-right: 2px solid #FFF;
	 border-radius: 50%;
	 transition: all 200ms;
	 margin: auto;
	 top: 0;
	 bottom: 0;
	 left: 0;
	 right: 0;
}
 .sound--wave_one {
   width: 35%;
   height: 25%;
}
 .sound--wave_two {
   width: 65%;
   height: 40%;
}
 .sound-mute .sound--wave {
	 border-radius: 0;
	 width: 50%;
	 height: 25%;
	 border-width: 0 2px 0 0;
}
 .sound-mute .sound--wave_one {
	 transform: rotate(45deg) translate3d(0, -50%, 0);
}
 .sound-mute .sound--wave_two {
	 transform: rotate(-45deg) translate3d(0, 50%, 0);
}
 
/*    */
  
  
  @media only screen and (max-width: 600px) {
    #video-wrapper.wrapper{
      height: 292.8px;
    }
    #video-wrapper .sound{
      bottom: -15px;
      right: 10px;
    }
  }


 
  
</style>

<div id="video-wrapper" class="wrapper">
  <video src="{{ section.settings.banner_video }}" id="video-one" class="wrapper__video video" autoplay="true" loop muted playsinline></video>  
  <div class="sound">
    <i class="sound--icon fal fa-volume-off"></i>
    <div class="sound--wave sound--wave_one"></div>
    <div class="sound--wave sound--wave_two"></div>
  </div>
</div>

{% schema %}
  {
   "name": "Maternity Header",
   "settings": [
    	{
        "type": "text",
        "id": "banner_video",
        "label": "Video URL"
  		}
  	]
  }
{% endschema %}

<script>  
  $(document).ready(function(){
    $("#video-one").load();
    var video_button = $(".wrapper")[0];
    video_button.addEventListener("click", function() {
      var video = $("#video-one")[0];
      const booleanValue = video.muted.valueOf();
      if (booleanValue == true) {
        video.muted = false;
      } else {
        video.muted = true;
      }
    });
    
    
    $('.sound').click(function() {
      $(this).toggleClass('sound-mute');
    });
    
  });
  
</script>

