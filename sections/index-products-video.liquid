<style>
  .index-slider-styling{
    padding-bottom: 35px !important; 
  }
  .video-autoplay-wrapper {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    background-color: var(--bg);
  }
  .video-autoplay-wrapper video {
    width: 100%; 
    height: 100%;
    object-fit: cover;
 
  }
  @media only screen and (max-width: 600px) {
    .index-slider-styling{
      margin: 0 !important; 
      padding-top: 0 !important; 
    }
  }
</style>  
<div id="products-{{ section.id }}" class="page-width{% if section.settings.sidebar == 'left' or section.settings.sidebar == 'right' %} has-sidebar{% endif %}" data-section-id="{{ section.id }}" data-section-type="products"{% if section.settings.background != blank %} style="background-color:{{ section.settings.background }};"{% endif %}>
  {%- if section.settings.sidebar == 'left' -%}
  <div class="column-container small-12 large-5 float-{{ section.settings.sidebar }}" style="position: relative">
 
    
      {% comment %} FRONT PAGE LINK FOR COLLECTION TITLE {% endcomment %}
      <div class="video-autoplay-wrapper">
        <video data-video-autoplay=""  style="object-position: center center;" playsinline="" autoplay="" loop="" muted="">
          <source src={{section.settings.video_url}} type="video/mp4">
        </video>
    </div>
  </div>
  {%- endif -%}
  <div class="column-container{% if section.settings.sidebar == 'left' or section.settings.sidebar == 'right' %} small-12 large-7 float-left{% endif %}">
    <div class="row index-slider-styling">
      <div class="large-12 columns">
        {%- assign my_shortcode = '' -%}

        {%- if section.settings.layout == 'listing' -%}
        {%- assign my_shortcode = '[products' -%}
        {%- else -%}
        {%- assign my_shortcode = '[products-slider' -%}
        {%- endif -%}

        {%- assign my_section_title = '' -%}
        {%- unless section.settings.sidebar == 'left' or section.settings.sidebar == 'right' -%}
          {%- assign my_section_title = section.settings.heading | escape -%}
        {%- endunless -%}
        {%- assign my_shortcode = my_shortcode | append: ' title="' | append: my_section_title | append: '" collection="' | append: section.settings.collection | append: '" limit="' | append: section.settings.limit | append: '" columns="' | append: section.settings.columns | append: '"]' -%}

        {%- if section.settings.sidebar == 'left' or section.settings.sidebar == 'right' -%}
          <div class="empty_space" style="height:50px"><span class="empty_space_inner"></span></div>


          <a class="index-product-link-wrapper" href="/collections/{{ collections[section.settings.collection].handle }}"> 
            <h3 class="shortcode_title_1" style="color:black">{{ collections[section.settings.collection].title }}</h3> 
            <p class="index-product-paragraph">VIEW ALL <i class="far fa-external-link-square-alt index-product-viewAll"></i></p>
         </a>
        
          <h4 class="shortcode_title_2">{{ section.settings.heading | escape }}</h4>
          <div class="empty_space" style="height:40px"><span class="empty_space_inner"></span></div>
        {%- endif -%}
        
        {%- include 'shortcode' load: my_shortcode -%}
      </div>
    </div>
  </div>
  {%- if section.settings.sidebar == 'right' -%}
  <div class="column-container small-12 large-5 float-{{ section.settings.sidebar }}" style="position:relative">
    <div class="video-autoplay-wrapper">
        <video data-video-autoplay=""  style="object-position: center center;" playsinline="" autoplay="" loop="" muted="">
          <source src={{section.settings.video_url}} type="video/mp4">
        </video>
      </div>
  </div>
  {%- endif -%}
</div>

{% schema %}
  {
    "name": "Featured collection Video",
    "class": "index-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
        "id": "collection",
        "type": "collection",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "limit",
        "min": 2,
        "max": 20,
        "step": 1,
        "label": "Number of Products",
        "default": 8
      },
      {
        "type": "range",
        "id": "columns",
        "min": 2,
        "max": 6,
        "step": 1,
        "label": "Products per Row",
        "default": 4
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "options": [
          {
            "value": "listing",
            "label": "Listing"
          },
          {
            "value": "slider",
            "label": "Slider"
          }
        ]
      },
      {
        "type": "color",
        "id": "background",
        "label": "Background",
        "default": "#ffffff"
      },
      {
        "type": "header",
        "content": "Sidebar"
      },
      {
        "type": "select",
        "id": "sidebar",
        "label": "Position",
        "options": [
          {
            "value": "",
            "label": "None"
          },
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "text",
        "id": "sidebar_height",
        "label": "Height (px)"
      },
      {
        "type": "text",
        "id": "video_url",
        "label": "Video URL"
      }
    ],
    "presets": [
      {
        "name": "Featured collection Video",
        "category": "Collection"
      }
    ]
  }
{% endschema %}