<style>
  #template--banner-innoseal {
    background: #f0f0f0;
    padding: 100px 0px;
  }
  #template--banner-innoseal .brick__block__text {
    padding: 100px 0px;
  }
  #template--banner-innoseal .brick__block__text__inner_innoseal{
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  #template--banner-innoseal .banner-video {
    margin-left: 50px;
  }
  #template--banner-innoseal .h2 {
    font-family: Gotham;
    font-size: 48px;
    font-weight: 700;
    line-height: 58px;
    letter-spacing: 0em;
    text-align: left;
  }
  #template--banner-innoseal p {
    font-family: Gotham;
    font-size: 24px;
    font-weight: 400;
    line-height: 33px;
  }
  @media only screen and (max-width: 700px) {
   #template--banner-innoseal .brick__block__text__inner_innoseal{
    display: block;
  }
    #template--banner-innoseal .banner-video {
    margin-left: 0px;
      margin-top: 50px;
  }
    #template--banner-innoseal iframe {
      width: 100%;
    }
}
</style>

<section id="template--banner-innoseal" style="--padding-ratio: 100%;">      
<div class="wrapper" data-prevent-transparent-header="">
    <div class="brick__block__text__inner_innoseal">
      {% for block in section.blocks %}
    		{% case block.type %}
      			{% when 'text' %}
                <div>
                  <div class="text__standard text-left" data-overflow-content="">
                      <h2 class="h2 standard__heading aos-init aos-animate" data-aos="hero" data-aos-anchor="[data-section-id='template--14386382372961__1649397773b6d90b23']" data-aos-order="2">
                        {{block.settings.kicker }}
                      </h2>
                      <div class="standard__rte font--3 columns--1 aos-init aos-animate" data-aos="hero" data-aos-anchor="[data-section-id='template--14386382372961__1649397773b6d90b23']" data-aos-order="3">
                        <p>{{block.settings.text }}</p>
                      </div>
                      <a href="{{block.settings.button_url}}" class="standard__cta btn btn--long uppercase btn--neutral aos-init aos-animate" data-aos="hero" data-aos-anchor="[data-section-id='template--14386382372961__1649397773b6d90b23']" data-aos-order="4">
                        {{block.settings.button_text}}
                      </a>
                  </div>
                </div>
               {% when 'image' %}
                 <div class="banner-video">
                      <iframe width="500px" height="315"
                  src="{{block.settings.videoLink}}"
                  frameborder="0" allowfullscreen>
                  </iframe>
                </div>
        {% endcase %}
  {% endfor %}
    </div>     
  </div>
</section>

