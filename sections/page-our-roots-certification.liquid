{%- assign fixed_aspect_ratio = false -%}
{% unless section.settings.image_size == 'natural' %}
  {%- assign fixed_aspect_ratio = true -%}
{% endunless %}



  {% if section.blocks.size > 0 %}
    {%- assign grid_item_width = 'medium-up--one-third' -%}

    <div class="index-section">
        <section class="product-wrapper-header">
            <div class="container">
                <h2 class="product-wrapper-heading">{{ section.settings.title }}</h2>
            </div>
        </section> 
     
        <div class="page-width footer-promotions">
          <div class="grid grid--flush-bottom">
            {% for block in section.blocks %}
              <div class="grid__item {{ grid_item_width }}" {{ block.shopify_attributes }} data-aos="row-of-3">
                {% if block.settings.enable_image %}
                  <a href="{{ block.settings.button_link }}" class="article__grid-image">
                    {% if block.settings.image != blank %}
                      {% if fixed_aspect_ratio %}
                        <div class="image-wrap">
                          <div
                            class="grid__image-ratio grid__image-ratio--cover grid__image-ratio--{{ section.settings.image_size }} lazyload"
                            data-bgset="{% include 'bgset', image: block.settings.image %}"
                            data-sizes="auto">
                          </div>
                          <noscript>
                            <img class="lazyloaded" src="{{ block.settings.image | img_url: '400x' }}" alt="{{ block.settings.title | escape }}">
                          </noscript>
                        </div>
                      {% else %}
                        <div class="image-wrap" style="height: 0; padding-bottom: {{ 100 | divided_by: block.settings.image.aspect_ratio }}%;">
                          {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                          <img class="lazyload"
                              data-src="{{ img_url }}"
                              data-widths="[180, 360, 540, 720, 900, 1080]"
                              data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                              data-sizes="auto"
                              alt="{{ block.settings.image.alt | escape }}">
                          <noscript>
                            <img class="lazyloaded" src="{{ block.settings.image | img_url: '400x' }}" alt="{{ block.settings.title | escape }}">
                          </noscript>
                        </div>
                      {% endif %}
                    {% else %}
                      {% if fixed_aspect_ratio %}
                        <div class="image-wrap">
                          <div
                            class="grid__image-ratio grid__image-ratio--cover grid__image-ratio--{{ section.settings.image_size }} lazyloaded">
                            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
                          </div>
                        </div>
                      {% else %}
                        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
                      {% endif %}
                    {% endif %}
                  </a>
                {% endif %}                
                {% if block.settings.text != blank %}
                  <div class="rte-setting text-spacing">{{ block.settings.text }}</div>
                {% endif %}
                
              </div>
            {% endfor %}
          </div>
        </div>
      
    </div>
  {% endif %}


{% schema %}
  {
    "name": "Image with Bottom Text", 
    "class": "index-section--footer",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Certification & Standards"
      },
      {
        "type": "select",
        "id": "image_size",
        "label": "Image size",
        "default": "wide",
        "options": [
          {
            "value": "natural",
            "label": "Natural"
          },
          {
            "value": "square",
            "label": "Square (1:1)"
          },
          {
            "value": "landscape",
            "label": "Landscape (4:3)"
          },
          {
            "value": "portrait",
            "label": "Portrait (2:3)"
          },
          {
            "value": "wide",
            "label": "Wide (16:9)"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "promotion",
        "name": "Column",
        "settings": [
          {
            "type": "checkbox",
            "id": "enable_image",
            "label": "Show image",
            "default": true
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },          
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Use this section to promote content throughout every page of your site. Add images for further impact.</p>"
          }         
        ]
      }
    ],
    "default": {
      "blocks": [
        {
          "type": "promotion"
        },
        {
          "type": "promotion"
        },
        {
          "type": "promotion"
        }
      ]
    }
  }
{% endschema %}

<style>
    @media screen and (min-width: 992px){
        #shopify-section-{{section.id}} .container .product-wrapper-heading{
            position: relative;
            top: -30px;
            left: 0;
            text-align: left;
        }
        #shopify-section-{{section.id}} .page-width.footer-promotions{
            max-width: 1000px;
        }
        #shopify-section-{{section.id}} .grid__item{
            min-height: 220px;
            padding-left: 5%;
            padding-right: 5%;
        }
    }
    
</style>