<div class="accordion rte {{ classes }}">
  <div
    class="accordion__group"
    data-index="{{ forloop.index0 }}"
    {{ block.shopify_attributes }}
  >
    <a class="accordion__label" href="#">
      {{ heading }}
    </a>
    <div class="accordion__text{% if small_text %} fs-body-small{% endif %}">
      {{ content }}
       {% if heading == 'Product details' and product.metafields.custom.safety_dropdown %}
                <div class='warning'>
                  <div class="warning-row">
                    <img src='{{ product.metafields.custom.safety_compliance_warning | img_url: '19px' }}' class='warning-icon' />
                    <strong>{{ product.metafields.custom.safety_compliance_warning_title }}</strong>
                  </div>
                  <div class="warning-row">
                    <p>{{ product.metafields.custom.safety_dropdown }}</p>
                  </div>
                </div>
              {% endif %}
    </div>
  </div>
</div>