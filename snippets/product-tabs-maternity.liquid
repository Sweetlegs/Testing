<div class="product-tabs">
    <ul class="tabs">
        <li class="description_tab active">
            <a href="#tab-add-info" id="info-title">Product Details</a>
        </li>           
        <li class="reviews_tab">
            <a href="#tab-reviews" id="review-title">{{ 'products.product.reviews' | t | escape }}</a>
        </li>      
    </ul>

<div class="panel" id="tab-add-info" >
  <div class="info-details-athleisure">
    {%include 'info-details-maternity' %}
  </div>

{%- if product.type == 'SweetTops' -%}
	{% if product.title == "Classic Layering Tank" %}
		{%include 'info-table-tanks' %}
	{% elsif product.title == "Classic Swing Tank" %}
		{%include 'info-table-tanks' %}
  	{% else %}
		{%include 'info-table-sweettops' %}
	{% endif %}
{%- endif -%}
  
</div>
              
<div class="panel" id="tab-reviews" style='display:none;' >
                
    <div id="stamped-main-widget" class="stamped-main-widget"
        data-product-id="{{ product.id }}"
        data-name="{{ product.title | escape }}"
        data-url="{{ shop.url }}{{ product.url }}"
        data-image-url="{{ product.featured_image | product_img_url: "large" |replace: '?', '%3F' | replace: '&','%26'}}"
        data-description="{{ product.description | escape }}"
        data-product-sku="{{product.handle}}">
    </div>
</div>
</div>


