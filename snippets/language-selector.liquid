
<script>
    
  $(document).ready(function(e) { 
    function changeKalviyoprofileLanguage(language) {
      $.ajax({
        url : ` https://sweetlegs.rocks/api/klaviyo/profile`,
        type : 'patch',
        data: {
          email: `{{customer.email}}`,
          language: language,
        },
        success : function(data) {
        }
      });     
    }
    if(localStorage.getItem('language') == 'french') {
       $('.french-version').removeClass('visibiltyHidden');
       $('.english-version').addClass('visibiltyHidden');
           $('.languageChange button').removeClass('active');
      $('.languageChange button.frn').addClass('active');
    } else {
       $('.french-version').addClass('visibiltyHidden');
      $('.english-version').removeClass('visibiltyHidden');
      $('.languageChange button').removeClass('active');
      $('.languageChange button.eng').addClass('active');
    }
    $('.languageChange button.eng').click(function(e) {
      e.preventDefault();
      
       $('.languageChange button').removeClass('active');
      localStorage.setItem('language', 'english');
      $(this).addClass('active');
      $('.french-version').addClass('visibiltyHidden');
      $('.english-version').removeClass('visibiltyHidden');
      changeKalviyoprofileLanguage('english');
    });
     $('.languageChange button.frn').click(function(e) {
       e.preventDefault();
       localStorage.setItem('language', 'french');
        $('.languageChange button').removeClass('active');
       $(this).addClass('active');
       $('.french-version').removeClass('visibiltyHidden');
       $('.english-version').addClass('visibiltyHidden');
       changeKalviyoprofileLanguage('french');
    });
  })
</script>

