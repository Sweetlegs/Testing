{%- if recommendations.performed -%}
  {%- if recommendations.products_count > 0 -%}
<style>
  /* You might */
  /* like */

</style>    
  <h2 style="font-family: 'Ozymandias';font-size: 86px;">You might
  <span style="font-family: 'Neue Haas Grotesk Text Pro';font-size: 57px;">like</span>
  </h2>
    <div class="flickity-grid" data-slider data-grid-large="{{ number_slides | default: 4 }}">
