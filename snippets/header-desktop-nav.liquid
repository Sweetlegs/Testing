{% unless limit %}
  {%- assign limit = main_menu.links.size -%}
{% endunless %}
{% unless offset %}
  {%- assign offset = 0 -%}
{% endunless %}

<ul
  class="site-nav site-navigation small--hide"
  {% unless disable_aria %}
    role="navigation" aria-label="Primary"
  {% endunless %}>
  {% assign index = 0 %}
  {% for link in main_menu.links limit: limit offset: offset %}
  	{% assign index = index | plus: 1 %}
    {%- assign has_dropdown = false -%}
    {%- assign is_megamenu = false -%}
    {% if link.links != blank %}
      {%- assign has_dropdown = true -%}
      {% if link.levels > 1 %}
        {%- assign is_megamenu = true -%}
      {% endif %}
    {% endif %}

    {%- assign is_megamenu = true -%}

    <li
      class="site-nav__item site-nav__expanded-item{% if has_dropdown %} site-nav--has-dropdown{% endif %}{% if is_megamenu %} site-nav--is-megamenu{% endif %}"
      {% if has_dropdown %}aria-haspopup="true"{% endif %}>
      {%assign link_url = link.url %}
      {%if link.title contains 'Order'%}
         {%if customer %}
           {%assign link_url = link.url %}
         {%else%}
        {%assign link_url = '/account/login?return_url=%2Fcollections/all' %}
         {%endif%}
      {%else%}
           {%assign link_url = link.url %}
      {%endif%}
      <a href="{{ link_url }}" class="site-nav__link site-nav__link--underline{% if has_dropdown %} site-nav__link--has-dropdown{% endif %}">
        {{ link.title }}
      </a>
      {% if is_megamenu %}
        {%- assign previous_column_type = '' -%}
        {%- assign animation_column = 1 -%}

        <div class="site-nav__dropdown megamenu text-left">
          <div class="page-width menu-width">
            <div class="grid">
              <div class="grid__item medium-up--one-quarter appear-animation appear-delay-{{ animation_column }}">
                {%- assign animation_column = animation_column | plus: 1 -%}

                {% for childlink in link.links %}
                  {%- assign create_new_column = false -%}

                  {% if childlink.levels > 0 and forloop.index != 1 %}
                    {%- assign create_new_column = true -%}
                  {% endif %}
                
                  {% if forloop.index == 7 or forloop.index == 13 or forloop.index == 19 %}
                	{%- assign create_new_column = true -%}
                  {% endif %}

                  {% if childlink.levels == 0 and previous_column_type == 'full' %}
                    {%- assign create_new_column = true -%}
                  {% endif %}

                  {% if create_new_column %}
                    </div><div class="grid__item medium-up--one-quarter appear-animation appear-delay-{{ animation_column }}">
                    {%- assign animation_column = animation_column | plus: 1 -%}
                  {% endif %}

                  {%- assign subcollection_drop = false -%}
                  {% if childlink.levels > 0 and childlink.url contains '/collections/' %}
                    {%- assign lang_code_string = request.locale.iso_code | prepend: '/' -%}
                    {%- assign subcollection_handle = childlink.url | remove: '/collections/' | remove: lang_code_string -%}
                    {%- assign subcollection_drop = collections[subcollection_handle] -%}
                    {% if subcollection_drop.image != blank %}
                      <a
                        href="{{ childlink.url }}"
                        class="megamenu__colection-image"
                        style="background-image: url({{ collections[subcollection_handle].image | img_url: '400x' }})"></a>
                    {% endif %}
                  {% endif %}

                  <div class="h5">
                    <a href="{{ childlink.url }}" class="site-nav__dropdown-link site-nav__dropdown-link--top-level">{{ childlink.title }}</a>
                  </div>

                  {% if childlink.levels > 0 %}
                    {%- assign previous_column_type = 'full' -%}
                  {% else %}
                    {%- assign previous_column_type = 'single' -%}
                  {% endif %}

                  {% for grandchildlink in childlink.links %}
                    <div>
                      <a href="{{ grandchildlink.url }}" class="site-nav__dropdown-link">
                        {{grandchildlink.title}}
                      </a>
                    </div>
                  {% endfor %}
                {% endfor %}
              </div>
              {% for block in section.blocks %}
              	{% if block.type == 'image' %}
              	  {% assign block_index = block.settings.index | plus: 0%}
              	  {% if block_index == index %}
                    <div class="grid__item medium-up--one-quarter appear-animation appear-delay-{{ animation_column }}" style="float:right">
					  {% if block.settings.button_text == blank %}{% if block.settings.url != blank  %}<a href="{{block.settings.url}}">{% endif %}{% endif %}
                      {{block.settings.image | img_url: '1000x' | img_tag }}
                      <div class="text-left">
                        {% unless block.settings.info_text == blank %}
                        <p>{{block.settings.info_text}}</p>
                        {% endunless %}
                        {% unless block.settings.button_text == blank %}
                        <a href="{{block.settings.url}}" class="btn btn-secondary">{{block.settings.button_text}}</a>
                        {% endunless %}
                      </div>
                      {% if block.settings.button_text == blank %}{% if block.settings.url != blank  %}</a>{% endif %}{% endif %}
                    </div>              
              	  {% endif %}
              	{% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      {% elsif has_dropdown %}
        <ul class="site-nav__dropdown text-left">
          {% for childlink in link.links %}
            {%- assign has_sub_dropdown = false -%}
            {% if childlink.links != blank %}
              {%- assign has_sub_dropdown = true -%}
            {% endif %}

            <li class="{% if has_sub_dropdown %} site-nav__deep-dropdown-trigger{% endif %}">
              <a href="{{ childlink.url }}" class="site-nav__dropdown-link site-nav__dropdown-link--second-level {% if has_sub_dropdown %} site-nav__dropdown-link--has-children{% endif %}">
                {{ childlink.title | escape }}
                {% if has_sub_dropdown %}
                  <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon--wide icon-chevron-down" viewBox="0 0 28 16"><path d="M1.57 1.59l12.76 12.77L27.1 1.59" stroke-width="2" stroke="#000" fill="none" fill-rule="evenodd"/></svg>
                {% endif %}
              </a>
              {% if has_sub_dropdown %}
                <ul class="site-nav__deep-dropdown">
                  {% for grandchildlink in childlink.links %}
                    <li>
                      <a href="{{ grandchildlink.url }}" class="site-nav__dropdown-link">{{ grandchildlink.title | escape }}</a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </li>
  {% endfor %}
</ul>
